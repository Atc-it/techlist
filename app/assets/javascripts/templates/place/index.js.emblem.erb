div#place
  h1.header
    name
    i.icon-close title="<%= I18n.t('places.messages.close') %>" click="close"

  .header.row
    .small-4.columns.logo
      if logo_url
        img src=logo_url alt="Logo"
      else
        img src="<%= image_url 'no-logo.png' %>" alt="Logo is missing"
    .small-8.columns
      if url
        p.url
          i.icon-link
          a href=url target="_blank" = url
      p.street
        i.icon-pointer
        span= street
      p.city
        span= zipCode
        span= city

  .content
    if description
      markdown description
    else
      p
        span.placeholder <%= I18n.t('places.messages.im_sad') %>
      p
        span.placeholder <%= I18n.t('places.messages.i_should_not_be_empty') %>
      p
        span.placeholder <%= I18n.t('places.messages.please_gimme_data') %>

  .edit class=needsDescription
    if needsDescription
      p <%= I18n.t('places.messages.no_description') %>
    else
      p <%= I18n.t('places.messages.not_up_to_date') %>

    a href=updateUrl class="button"
      i.icon-note
      | <%= I18n.t('places.messages.update_this_place') %>
