<div class="row">
  <div class="small-12 medium-10 columns medium-centered">
    <h2>Add a place</h2>
    <hr />

    <%= simple_form_for(@place) do |f| %>

      <%= render partial: 'form', locals: { f: f } %>

      <div class="submit">
        <%= f.button :submit, 'Add the place' %>
        or
        <%= link_to 'go back to the map', root_path %>
      </div>

    <% end %>
  </div>
</div>
